							img(src="" + path_image + "trucking.png")
						.image-box__inner
							h6.image-box__title Sprawdzone samochody
							p.image-box__description Morbi imperdiet laoreet mi, vel porta lacus fermentum nec. Nulla facilisi.
				.col-sm-4
					.component.image-box
						.image-box__image
							img(src="" + path_image + "packing.png")
						.image-box__inner
							h6.image-box__title Bezpieczne magazyny
							p.image-box__description Morbi imperdiet laoreet mi, vel porta lacus fermentum nec. Nulla facilisi.
				.col-sm-4
					.component.image-box
