//- Document Head
extends config/base

//- Blok w którym możemy nadpisywać tagi z Heada
block page_title
	title= "Transport międzynarodowy | Bałtex"

//- Blok który zatrzymuje wyświetlanie linku do Strony głownej, kiedy się na niej znajdujemy
block link_to_home_page_disabled
	

block page_content
	div.sr-only
		svg(style='display: none;', xmlns='http://www.w3.org/2000/svg')
			symbol#blueberries(viewbox='0 0 53.308 53.308')
				title
					| Blue
				path(d='M39.685,2.953c-7.524,0-13.623,6.099-13.623,13.623c0,2.243,0.552,4.353,1.512,6.219 c1.496-0.565,3.11-0.888,4.804-0.888c5.281,0,9.851,3.011,12.111,7.404c5.15-1.944,8.819-6.905,8.819-12.735 C53.308,9.052,47.208,2.953,39.685,2.953z', style='fill:#003879;')
	section.section.section--ghost
		.component.main-slider(data-items="1", data-arrows="false", data-dots="true")
			.item.main-slider__item(data-background="" + path_image + "slider-01.jpg", data-background-mobile="" + path_image + "slider-01.jpg",, data-thumb="Transport międzynarodowy")
				.main-slider__inner
					.container
						.row
							.col-xs-12
								+main-slider-title(
									'Posiadamy ponad 12 letnie doświadczenie w&nbsp;branży spedycyjnej',
									'transport-miedzynarodowy',
									'Czytaj więcej o spedycji'
								)
			.item(data-background="" + path_image + "slider-02.jpg", data-background-mobile="" + path_image + "slider-02.jpg", data-thumb="Magazyn czasowego składowania").main-slider__item.main-slider__item--overlayed
				.main-slider__inner
					.container
						.row
							.col-xs-12
								+main-slider-title(
									'Cechuje nas&nbsp;doskonała znajomość problematyki celnej',
									'magazyn-czasowego-skladowania',
									'Sprawdź, jak działa nasz magazyn'
								)
			.item(data-background="" + path_image + "slider-03.jpg", data-background-mobile="" + path_image + "slider-03.jpg", data-thumb="Sprzedaż suchej tarcicy dąb-sosna").main-slider__item.main-slider__item--overlayed
